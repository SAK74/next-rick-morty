generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Favorite {
  id Int @id

  @@map("favorites")
}

enum HeroStatus {
  Alive
  Dead
  unknown
}

enum Gender {
  Female
  Male
  Genderless
  unknown
}

model Custom {
  id      String     @id @default(uuid())
  name    String
  status  HeroStatus @default(unknown)
  gender  Gender     @default(unknown)
  image   String
  species String
  created DateTime   @updatedAt
}
